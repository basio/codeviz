/* ------------------------------------------------------------------ *
 * DECLARATIONS
 * ------------------------------------------------------------------ */

DEBUG = false
REFS = false

/* ------------------------------------------------------------------ *
 * HEAP
 * ------------------------------------------------------------------ */

._heap
	overflow: visible

	if (DEBUG || false)
		padding: 2px
		border: 2px solid gray
		background-color: pink

// ----------------------------------------------
// HEAP | TABLE
// ----------------------------------------------

._heap table
	width: 100%

	if (DEBUG || false)
		/* background-color: brown */ 
		/* border: 2px solid purple */ 

// ----------------------------------------------

._heap table,
._heap table tr,
._heap table td
	min-width: 10px
		// min-height: 10px

	if (DEBUG || false)
		/* margin:  1px */ 
		/* padding: 1px */ 
		/* border:  1px solid black */

// ----------------------------------------------

._heap table tr td
	// padding-right: 5px
	// padding-left: 5px

// ----------------------------------------------

._heap table tr td:first-child
	if (DEBUG || false)
		background-color: blue

// ----------------------------------------------

._heap table tr td:nth-child(2)
	if (DEBUG || false)
		background-color: red

._heap table tr td:nth-child(3)
	if (DEBUG || false)
		background-color: yellow

._heap table tr td:nth-child(4)
	if (DEBUG || false)
		background-color: brown

// ----------------------------------------------
// HEAP | NODE
// ----------------------------------------------

._heap ._node
	display: block;

	if (DEBUG || false)
		border: 1px solid LightSlateGray
		border-radius:10px
		/* background-color: brown */

// ----------------------------------------------
// HEAP | (node) | POINTER/REF
// ----------------------------------------------

._heap ._ref
	overflow: visible

	min-width: 10px
	min-height: 10px

	if (DEBUG || false)
		border: 2px solid grey

// ----------------------------------------------
// HEAP | (node) | FUNCTION
// ----------------------------------------------

div._heap ._func
	overflow: visible

	if (DEBUG || true)
		border: 1px solid grey
		background-color: orange

// ----------------------------------------------
// HEAP | CLASS
// ----------------------------------------------

._heap ._class

	if (DEBUG || false)
		border: 2px solid purple
		/* background-color: brown */

// ----------------------------------------------
// HEAP | INSTANCE
// ----------------------------------------------

._heap ._instance

	if (DEBUG || false)
		border: 2px solid red
		/* background-color: brown */

// ----------------------------------------------
// HEAP | (class|instance) | TABLE | PROPERTIES
// ----------------------------------------------

._heap table._properties
	padding-left: 20px

	if (DEBUG || false)
		border: 2px solid teal
		/* background-color: brown */

// ----------------------------------------------

._heap table._properties tr td:first-child
	text-align: right

	if (DEBUG || false)
		background-color: blue

// ----------------------------------------------

._heap table._properties tr td:nth-child(2)

	if (DEBUG || false)
		background-color: orange

// ----------------------------------------------
// HEAP | (node) | LIST
// ----------------------------------------------

._heap ._list
	overflow: visible

	if (DEBUG || false)
		border: 1px solid grey
		background-color: orange

// ----------------------------------------------
// HEAP | (node) | TUPLE
// ----------------------------------------------

._heap ._tuple
	overflow: visible

	if (DEBUG || false)
		border: 1px solid grey
		background-color: purple

// ----------------------------------------------
// HEAP | (node) | SET
// ----------------------------------------------

._heap ._set
	overflow: visible

	if (DEBUG || false)
		border: 1px solid grey
		background-color: orange

// ----------------------------------------------
